<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         syntaxCheck="false">
  <testsuites>
    <testsuite name="All">
      <directory>./tests</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist>
      <directory suffix=".inc">./src</directory>
      <directory suffix=".php">./src</directory>
    </whitelist>
  </filter>
</phpunit> 
